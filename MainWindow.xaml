<Window
    x:Class="NET_ININ3_PR2_z1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:NET_ININ3_PR2_z1"
    mc:Ignorable="d"
    
    Title="Nasze okno"
    Height="650"
    Width="400"
    >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Stretch"
            Margin="5"
            BorderThickness="4"
            Padding="15"
            BorderBrush="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}"
            Background="#FFD6CCB9"
            Foreground="Blue"
            FontSize="18"
            FontWeight="Bold"
            >
            Etykieta
        </Label>
        <Border
            Background="#FF92D2DC"
            BorderBrush="#FFB91616"
            BorderThickness="2"
            Grid.Column="1"
            Margin="10"
            >

        </Border>
        <TextBlock
            Margin="10"
            Padding="2"
            Grid.Row="1"
            Grid.RowSpan="2"
            TextWrapping="Wrap"
            Background="#FFFFD3D3"
            Foreground="#FF3D119B"
            TextAlignment="Justify"
            LineHeight="20"
            FontSize="13"
            >
            Blok tekstowy Blok tekstowy Blok tekstowy Blok tekstowy Blok tekstowy Blok tekstowy Blok tekstowy Blok tekstowy
        </TextBlock>
        <TextBox
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="5"
            TextWrapping="Wrap"
            Background="#FFF1EAE2"
            CaretBrush="Red"
            SelectionBrush="#FF00D1BE"
            SelectionTextBrush="White"
            >
            Edytowalne pole tekstowe
        </TextBox>
        <Button
            Grid.Column="2"
            Margin="10"
            FontSize="18"
            >
            Przycisk
        </Button>


    </Grid>
</Window>
